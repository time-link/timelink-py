{
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.10",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "enabled": true
        },
        // add npm and nodejs
        "ghcr.io/devcontainers/features/node:1": {
            "version": "latest",
            "node": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ]
        }
    }
}